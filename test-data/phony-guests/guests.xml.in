<node>

  <!-- no disks -->
  <domain type='test'>
    <name>nodisks</name>
    <memory>1048576</memory>
    <os>
      <type>hvm</type>
      <boot dev='hd'/>
    </os>
    <devices>
    </devices>
  </domain>

