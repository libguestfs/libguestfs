msgstr ""

#. type: =item
#: ../builder/virt-builder.pod:363 ../customize/virt-customize.pod:120
#: ../dib/virt-dib.pod:217
msgid "B<--memsize> MB"
msgstr ""

#. type: textblock
#: ../builder/virt-builder.pod:365 ../customize/virt-customize.pod:122
msgid ""
"Change the amount of memory allocated to I<--run> scripts.  Increase this if "
"you find that I<--run> scripts or the I<--install> option are running out of "
"memory."
msgstr ""

#. type: textblock
#: ../builder/virt-builder.pod:369 ../customize/virt-customize.pod:126
#: ../dib/virt-dib.pod:222
msgid "The default can be found with this command:"
msgstr ""

#. type: verbatim
#: ../builder/virt-builder.pod:371 ../customize/virt-customize.pod:128
#: ../dib/virt-dib.pod:224
#, no-wrap
msgid ""
" guestfish get-memsize\n"
"\n"
msgstr ""

#. type: =item
#: ../builder/virt-builder.pod:373 ../customize/virt-customize.pod:130
#: ../daemon/guestfsd.pod:72 ../dib/virt-dib.pod:237 ../fish/guestfish.pod:341
#: ../rescue/virt-rescue.pod:192
