" <OUTPUTDIR>/kernel\n"
" <OUTPUTDIR>/initrd\n"
" <OUTPUTDIR>/root\n"
" <OUTPUTDIR>/README.fixed\n"
"\n"

#. type: textblock
#: ../appliance/libguestfs-make-fixed-appliance.pod:66
