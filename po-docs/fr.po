#. type: textblock
#: ../docs/guestfs-performance.pod:458
msgid "Save the following script as F<time.stap>:"
msgstr ""

#. type: verbatim
#: ../docs/guestfs-performance.pod:460 ../src/guestfs.pod:3118
#, no-wrap
msgid ""
" global last;\n"
" \n"
msgstr ""
" global last;\n"
" \n"

#. type: verbatim
#: ../docs/guestfs-performance.pod:462 ../src/guestfs.pod:3120
#, no-wrap
msgid ""
" function display_time () {\n"
"       now = gettimeofday_us ();\n"
"       delta = 0;\n"
"       if (last > 0)\n"
"             delta = now - last;\n"
"       last = now;\n"
" \n"
msgstr ""
" function display_time () {\n"
"       now = gettimeofday_us ();\n"
"       delta = 0;\n"
"       if (last > 0)\n"
"             delta = now - last;\n"
"       last = now;\n"
" \n"

#. type: verbatim
#: ../docs/guestfs-performance.pod:469 ../src/guestfs.pod:3127
#, no-wrap
msgid ""
"       printf (\"%d (+%d):\", now, delta);\n"
" }\n"
" \n"
msgstr ""
"       printf (\"%d (+%d):\", now, delta);\n"
" }\n"
" \n"

#. type: verbatim
#: ../docs/guestfs-performance.pod:472 ../src/guestfs.pod:3130
#, no-wrap
msgid ""
" probe begin {\n"
"       last = 0;\n"
"       printf (\"ready\\n\");\n"
" }\n"
" \n"
msgstr ""
" probe begin {\n"
"       last = 0;\n"
"       printf (\"ready\\n\");\n"
" }\n"
" \n"

#. type: verbatim
#: ../docs/guestfs-performance.pod:477 ../src/guestfs.pod:3135
#, no-wrap
msgid ""
" /* Display all calls to static markers. */\n"
" probe process(\"/usr/lib*/libguestfs.so.0\")\n"
"           .provider(\"guestfs\").mark(\"*\") ? {\n"
"       display_time();\n"
"       printf (\"\\t%s %s\\n\", $$name, $$parms);\n"
" }\n"
" \n"
msgstr ""
" /* Display all calls to static markers. */\n"
" probe process(\"/usr/lib*/libguestfs.so.0\")\n"
"           .provider(\"guestfs\").mark(\"*\") ? {\n"
"       display_time();\n"
"       printf (\"\\t%s %s\\n\", $$name, $$parms);\n"
" }\n"
" \n"

#. type: verbatim
#: ../docs/guestfs-performance.pod:484
#, no-wrap
msgid ""
" /* Display all calls to guestfs_* functions. */\n"
" probe process(\"/usr/lib*/libguestfs.so.0\")\n"
"           .function(\"guestfs_[a-z]*\") ? {\n"
"       display_time();\n"
"       printf (\"\\t%s %s\\n\", probefunc(), $$parms);\n"
" }\n"
"\n"
msgstr ""
" /* Display all calls to guestfs_* functions. */\n"
" probe process(\"/usr/lib*/libguestfs.so.0\")\n"
"           .function(\"guestfs_[a-z]*\") ? {\n"
"       display_time();\n"
"       printf (\"\\t%s %s\\n\", probefunc(), $$parms);\n"
" }\n"
"\n"

