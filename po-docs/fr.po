"appliances-in-parallel-part-2/> L<http://rwmj.wordpress.com/2013/02/25/"
"multiple-libguestfs-appliances-in-parallel-part-3/> L<http://rwmj.wordpress."
"com/2013/02/25/multiple-libguestfs-appliances-in-parallel-part-4/>"
msgstr ""

#. type: verbatim
#: ../docs/guestfs-performance.pod:325
#, no-wrap
msgid ""
" #!/usr/bin/env perl\n"
" \n"
msgstr ""

#. type: verbatim
#: ../docs/guestfs-performance.pod:327
#, no-wrap
msgid ""
" use strict;\n"
" use threads;\n"
" use warnings;\n"
" use Sys::Guestfs;\n"
" use Time::HiRes qw(time);\n"
" \n"
msgstr ""

#. type: verbatim
#: ../docs/guestfs-performance.pod:333
#, no-wrap
msgid ""
" sub test {\n"
"     my $g = Sys::Guestfs->new;\n"
"     $g->add_drive_ro (\"/dev/null\");\n"
"     $g->launch ();\n"
"     \n"
msgstr ""
" sub test {\n"
"     my $g = Sys::Guestfs->new;\n"
"     $g->add_drive_ro (\"/dev/null\");\n"
"     $g->launch ();\n"
"     \n"

#. type: verbatim
#: ../docs/guestfs-performance.pod:338
#, no-wrap
msgid ""
"     # You could add some work for libguestfs to do here.\n"
"     \n"
msgstr ""
"     # You could add some work for libguestfs to do here.\n"
"     \n"

#. type: verbatim
#: ../docs/guestfs-performance.pod:340
#, no-wrap
msgid ""
"     $g->close ();\n"
" }\n"
" \n"
msgstr ""
"     $g->close ();\n"
" }\n"
" \n"

#. type: verbatim
#: ../docs/guestfs-performance.pod:343
#, no-wrap
msgid ""
" # Get everything into cache.\n"
" test (); test (); test ();\n"
" \n"
msgstr ""
" # Get everything into cache.\n"
" test (); test (); test ();\n"
" \n"

#. type: verbatim
#: ../docs/guestfs-performance.pod:346
#, no-wrap
msgid ""
" for my $nr_threads (1..20) {\n"
"     my $start_t = time ();\n"
"     my @threads;\n"
"     foreach (1..$nr_threads) {\n"
"         push @threads, threads->create (\\&test)\n"
"     }\n"
"     foreach (@threads) {\n"
"         $_->join ();\n"
"         if (my $err = $_->error ()) {\n"
"             die \"launch failed with $nr_threads threads: $err\"\n"
"         }\n"
"     }\n"
"     my $end_t = time ();\n"
"     printf (\"%d %.2f\\n\", $nr_threads, $end_t - $start_t);\n"
" }\n"
"\n"
msgstr ""
" for my $nr_threads (1..20) {\n"
"     my $start_t = time ();\n"
"     my @threads;\n"
"     foreach (1..$nr_threads) {\n"
"         push @threads, threads->create (\\&test)\n"
"     }\n"
"     foreach (@threads) {\n"
"         $_->join ();\n"
"         if (my $err = $_->error ()) {\n"
"             die \"launch failed with $nr_threads threads: $err\"\n"
"         }\n"
