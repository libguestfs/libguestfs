#, no-wrap
msgid ""
" import \"libguestfs.org/guestfs\"\n"
" \n"
msgstr ""
" import \"libguestfs.org/guestfs\"\n"
" \n"

#. type: verbatim
#: ../golang/examples/guestfs-golang.pod:9
#, no-wrap
msgid ""
" g, errno := guestfs.Create ()\n"
" if errno != nil {\n"
"     panic (fmt.Sprintf (\"could not create handle: %s\", errno))\n"
" }\n"
