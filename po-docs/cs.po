#. type: verbatim
#: ../java/examples/guestfs-java.pod:7
#, no-wrap
msgid ""
" import com.redhat.et.libguestfs.*;\n"
" \n"
msgstr ""

#. type: verbatim
#: ../java/examples/guestfs-java.pod:9
#, no-wrap
msgid ""
" GuestFS g = new GuestFS ();\n"
" g.add_drive (\"disk.img\",\n"
"              new HashMap<String,Object>() {\n"
