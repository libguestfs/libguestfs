#. type: verbatim
#: ../docs/guestfs-performance.pod:339
#, no-wrap
msgid ""
" sub test {\n"
"     my $g = Sys::Guestfs->new;\n"
"     $g->add_drive_ro (\"/dev/null\");\n"
"     $g->launch ();\n"
"     \n"
msgstr ""

#. type: verbatim
#: ../docs/guestfs-performance.pod:344
#, no-wrap
