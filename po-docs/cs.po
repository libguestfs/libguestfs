#. type: =head2
#: ../fish/guestfish-actions.pod:8327
msgid "set-libvirt-supported-credentials"
msgstr ""

#. type: verbatim
#: ../fish/guestfish-actions.pod:8329
#, no-wrap
msgid ""
" set-libvirt-supported-credentials 'creds ...'\n"
"\n"
msgstr ""

#. type: textblock
