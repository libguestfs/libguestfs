#. type: =head2
#: ../fish/guestfish-actions.pod:8045
msgid "set-autosync"
msgstr ""

#. type: =head2
#: ../fish/guestfish-actions.pod:8047
msgid "autosync"
msgstr ""

#. type: verbatim
#: ../fish/guestfish-actions.pod:8049
