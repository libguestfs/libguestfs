#. type: textblock
#: ../test-tool/libguestfs-test-tool.pod:23
msgid "If it runs to completion successfully, you will see this near the end:"
msgstr ""

#. type: verbatim
#: ../test-tool/libguestfs-test-tool.pod:25
#, no-wrap
msgid ""
" ===== TEST FINISHED OK =====\n"
"\n"
msgstr ""

#. type: textblock
#: ../test-tool/libguestfs-test-tool.pod:27
