#. type: verbatim
#: ../appliance/libguestfs-make-fixed-appliance.pod:87
#, no-wrap
msgid ""
" appliance/kernel\n"
" appliance/initrd\n"
" appliance/root\n"
" appliance/README.fixed\n"
"\n"
msgstr ""

#. type: textblock
