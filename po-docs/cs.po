#. type: =item
#: ../df/virt-df.pod:211
msgid "From the host"
msgstr ""

#. type: textblock
#: ../df/virt-df.pod:213 ../df/virt-df.pod:221
msgid "Run this command:"
msgstr ""

#. type: verbatim
#: ../df/virt-df.pod:215
#, no-wrap
msgid ""
" guestfish --ro -d GuestName -i statvfs /\n"
"\n"
msgstr ""

#. type: textblock
#: ../df/virt-df.pod:217 ../df/virt-df.pod:225
