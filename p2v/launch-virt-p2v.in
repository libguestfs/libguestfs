# This normally runs from systemd which deals with logging.

# To save one script, invoke self again to run the window manager
# and virt-p2v.
if [ "$1" = "run" ]; then
    cd /
    metacity &
    nm-applet &
    exec @libexecdir@/virt-p2v
else
    xinit "$0" run
fi
